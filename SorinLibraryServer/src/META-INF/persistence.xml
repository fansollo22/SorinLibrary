<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.1" xmlns="http://xmlns.jcp.org/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/persistence http://xmlns.jcp.org/xml/ns/persistence/persistence_2_1.xsd">
  <persistence-unit name="SorinLibraryServerPU" transaction-type="RESOURCE_LOCAL">
    <provider>org.eclipse.persistence.jpa.PersistenceProvider</provider>
    <class>sorinlibrarys.entities.Authors</class>
    <class>sorinlibrarys.entities.BookAuthors</class>
    <class>sorinlibrarys.entities.BookCategories</class>
    <class>sorinlibrarys.entities.Books</class>
    <class>sorinlibrarys.entities.Categories</class>
    <class>sorinlibrarys.entities.Users</class>
    <class>sorinlibrarys.entities.Reservations</class>
    <class>sorinlibrarys.entities.Notifications</class>
    <class>sorinlibrarys.entities.Reviews</class>
    <shared-cache-mode>NONE</shared-cache-mode>
    <properties>
      <property name="javax.persistence.jdbc.url" value="jdbc:mysql://localhost:3306/library"/>
      <property name="javax.persistence.jdbc.user" value="root"/>
      <property name="javax.persistence.jdbc.driver" value="com.mysql.jdbc.Driver"/>
      <property name="javax.persistence.jdbc.password" value="root"/>
    </properties>
  </persistence-unit>
</persistence>
